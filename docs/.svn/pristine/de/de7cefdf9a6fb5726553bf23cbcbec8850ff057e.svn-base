#!/bin/bash


SIZE=${SIZE:-'32'}
DARK=${DARK:-'192'}
LIGHT=${LIGHT:-'208'}

TARGET_DIR=${TARGET_DIR:-'.'}
FILE=${FILE:-"misc.checkerboard_SIZE=${SIZE}_DARK=${DARK}_LIGHT=${LIGHT}.png"}

echo "P2 2 2 255 $LIGHT $DARK $DARK $LIGHT" | convert pgm:- -filter Point -resize ${SIZE}x${SIZE} $TARGET_DIR/$FILE


